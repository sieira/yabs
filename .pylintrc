[MASTER]
persistent=no
ignore=migrations
extension-pkg-whitelist=datetime,Levenshtein,lxml,pycurl

[MESSAGES CONTROL]
disable=
    arguments-differ,
    duplicate-code,
    file-ignored,
    locally-disabled,
    locally-enabled,
    missing-docstring,
    no-init,
    no-self-use,
    superfluous-parens,
    too-many-ancestors,

[REPORTS]
msg-template={path}:{line}: [{msg_id}({symbol}), {obj}] {msg}

[BASIC]
no-docstring-rgx=__.*__|_.*
const-rgx=(([A-Z_][A-Z0-9_]*)|(__.*__)|logger|urlpatterns)$
method-rgx=([a-z_][a-z0-9_]{2,30}|setUp|tearDown|test_[a-z0-9_]{2,60}|assert[a-zA-Z0-9]{2,30})$
good-names=_

[TYPECHECK]
ignore-mixin-members=yes
ignored-classes=optparse.Values,thread._local,_thread._local

[VARIABLES]
init-import=no
dummy-variables-rgx=_

[SIMILARITIES]
min-similarity-lines=10
ignore-comments=yes
ignore-docstrings=yes
ignore-imports=yes

[MISCELLANEOUS]
notes=FIXME,XXX,TODO

[FORMAT]
max-line-length=100
max-module-lines=500
indent-string='    '

[DESIGN]
ignored-argument-names=_.*|args|kwargs
min-public-methods=0
